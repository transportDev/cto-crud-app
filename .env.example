# Root .env for docker-compose and containers
# Copy to .env before running `make init` (or `scripts\win\init.cmd` on Windows)

# App
APP_URL=http://localhost:8080
TZ=UTC
PUID=1000
PGID=1000

# Database
DB_HOST=db
DB_PORT=3306
DB_DATABASE=app
DB_USERNAME=app
DB_PASSWORD=secret
DB_ROOT_PASSWORD=rootsecret
MYSQL_ROOT_HOST=%

# Vite / Node (dev server)
VITE_HOST=0.0.0.0
VITE_PORT=5173

# Xdebug toggle (disabled by default)
XDEBUG=0
XDEBUG_MODE=off
XDEBUG_CLIENT_HOST=host.docker.internal
XDEBUG_CLIENT_PORT=9003
XDEBUG_DISCOVER_CLIENT_HOST=0